#include <iostream>
#include <vector>
using namespace std;

// Structure to store a task and its status
struct Task {
    string name;
    bool completed;
};

vector<Task> todoList;

// Function to add a task
void addTask() {
    string task;
    cout << "Enter task: ";
    cin.ignore();
    getline(cin, task);
    todoList.push_back({task, false});
    cout << "Task added successfully!\n";
}

// Function to view tasks
void viewTasks() {
    if (todoList.empty()) {
        cout << "\nNo tasks available.\n";
        return;
    }

    cout << "\n--- To-Do List ---\n";
    for (int i = 0; i < todoList.size(); i++) {
        cout << i + 1 << ". " << todoList[i].name 
             << " [" << (todoList[i].completed ? "Completed" : "Pending") << "]\n";
    }
}

// Function to mark a task as completed
void markCompleted() {
    int index;
    viewTasks();

    if (todoList.empty()) return;

    cout << "\nEnter task number to mark as completed: ";
    cin >> index;

    if (index > 0 && index <= todoList.size()) {
        todoList[index - 1].completed = true;
        cout << "Task marked as completed!\n";
    } else {
        cout << "Invalid task number!\n";
    }
}

